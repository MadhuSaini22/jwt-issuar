{
  "name": "@satsang-infotech/statsy",
  "version": "0.0.1",
  "description": "Static file server for NodeJs applications",
  "files": [
    "/lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "node test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satsang-infotech/statsy.git"
  },
  "keywords": [
    "static",
    "server",
    "nodejs",
    "static",
    "file",
    "server"
  ],
  "author": "Fenil Jariwala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/satsang-infotech/statsy/issues"
  },
  "homepage": "https://github.com/satsang-infotech/statsy#readme",
  "dependencies": {
    "http-server": "^14.0.0",
    "portfinder": "^1.0.28",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "prettier": "^2.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2"
  }
}
